    <build>
        <plugins>
            <plugin>
                <groupId>io.fabric8</groupId>
                <artifactId>fabric8-maven-plugin</artifactId>
                <version>4.4.2</version>
                <configuration>
                    <!-- Konfiguration für das Builden und Deployen in Docker -->
                    <docker>
                        <imageName>my-spring-boot-app</imageName>
                        <imageTag>${project.version}</imageTag>
                        <build>
                            <contextDir>${project.basedir}</contextDir>
                            <dockerFile>${project.basedir}/src/main/docker/Dockerfile</dockerFile>
                            <skip>false</skip>
                        </build>
                    </docker>
                    <!-- Konfiguration für das Deployen in Kubernetes -->
                    <kubernetes>
                        <name>my-spring-boot-app</name>
                        <imagePullPolicy>IfNotPresent</imagePullPolicy>
                        <generateName>false</generateName>
                    </kubernetes>
                </configuration>
                <executions>
                    <execution>
                        <id>fmp</id>
                        <goals>
                            <goal>resource</goal>
                            <goal>build</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>


